/* 智能医疗助手首页样式 */

/* 主容器 */
.home-container {
  height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  flex-direction: column;
  position: relative;
  overflow: hidden;
}

/* 顶部装饰 */
.top-decoration {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 200px;
  z-index: 1;
}

.decoration-circle {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
  animation: float 6s ease-in-out infinite;
}

.circle-1 {
  width: 80px;
  height: 80px;
  top: 20px;
  left: 20px;
  animation-delay: 0s;
}

.circle-2 {
  width: 120px;
  height: 120px;
  top: 60px;
  right: -20px;
  animation-delay: 2s;
}

.circle-3 {
  width: 60px;
  height: 60px;
  top: 140px;
  left: 50%;
  transform: translateX(-50%);
  animation-delay: 4s;
}

@keyframes float {
  0%, 100% { transform: translateY(0px) rotate(0deg); }
  50% { transform: translateY(-20px) rotate(180deg); }
}

/* 主要内容区域 */
.main-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40px 30px;
  z-index: 2;
  position: relative;
}

/* 应用头部 */
.app-header {
  text-align: center;
  margin-bottom: 40px;
  animation: fadeInUp 1s ease-out;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.app-icon {
  width: 100px;
  height: 100px;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 25px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 20px;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0% { transform: scale(1); }
  50% { transform: scale(1.05); }
  100% { transform: scale(1); }
}

.icon-emoji {
  font-size: 50px;
}

.app-title {
  color: #ffffff;
  font-size: 28px;
  font-weight: bold;
  display: block;
  margin-bottom: 8px;
  text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
}

.app-subtitle {
  color: rgba(255, 255, 255, 0.9);
  font-size: 16px;
  display: block;
}

/* 功能介绍区域 */
.feature-section {
  display: flex;
  justify-content: space-around;
  width: 100%;
  margin-bottom: 40px;
  animation: fadeInUp 1s ease-out 0.3s both;
}

.feature-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  padding: 0 10px;
}

.feature-icon {
  width: 50px;
  height: 50px;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24px;
  margin-bottom: 10px;
  backdrop-filter: blur(10px);
}

.feature-text {
  color: #ffffff;
  font-size: 12px;
  text-align: center;
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
}

/* 输入方式选择 */
.input-mode-section {
  width: 100%;
  margin-bottom: 30px;
  animation: fadeInUp 1s ease-out 0.6s both;
}

.section-title {
  color: #ffffff;
  font-size: 16px;
  font-weight: bold;
  display: block;
  text-align: center;
  margin-bottom: 15px;
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
}

.mode-picker {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 25px;
  padding: 0;
  box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
  backdrop-filter: blur(10px);
}

.picker-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 15px 20px;
}

.picker-icon {
  font-size: 20px;
  margin-right: 10px;
}

.picker-text {
  flex: 1;
  font-size: 16px;
  font-weight: bold;
  color: #333;
}

.picker-arrow {
  font-size: 12px;
  color: #666;
}

/* 开始按钮 */
.start-btn {
  background: linear-gradient(135deg, #ff6b6b, #ee5a24);
  color: #ffffff;
  border: none;
  border-radius: 30px;
  padding: 18px 40px;
  font-size: 18px;
  font-weight: bold;
  display: flex;
  align-items: center;
  gap: 10px;
  box-shadow: 0 8px 25px rgba(238, 90, 36, 0.4);
  animation: fadeInUp 1s ease-out 0.9s both;
  position: relative;
  overflow: hidden;
}

.start-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.5s;
}

.start-btn:active::before {
  left: 100%;
}

.start-btn:active {
  transform: scale(0.95);
}

.start-icon {
  font-size: 20px;
}

.start-text {  font-size: 16px;
}

/* 测试按钮 */
.test-btn {
  width: 280px;
  height: 45px;
  background: linear-gradient(135deg, #ff9a9e 0%, #fad0c4 100%);
  color: white;
  border: none;
  border-radius: 25px;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  margin: 15px auto 0;
  font-weight: bold;
  font-size: 14px;
  box-shadow: 0 4px 20px rgba(255, 154, 158, 0.4);
  position: relative;
  overflow: hidden;
  z-index: 10;
  animation: fadeInUp 1s ease-out 1.0s both;
}

.test-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: left 0.5s;
}

.test-btn:active::before {
  left: 100%;
}

.test-btn:active {
  transform: scale(0.95);
}

.test-icon {
  font-size: 18px;
}

.test-text {
  font-size: 14px;
}

/* 底部提示 */
.bottom-tips {
  margin-top: 30px;
  animation: fadeInUp 1s ease-out 1.2s both;
}

.tip-text {
  color: rgba(255, 255, 255, 0.8);
  font-size: 12px;
  display: block;
  text-align: center;
  margin-bottom: 5px;
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
}

/* 底部装饰 */
.bottom-decoration {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 150px;
  z-index: 1;
}

.wave-bg {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100px;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.1), rgba(255, 255, 255, 0.05));
  border-radius: 50% 50% 0 0;
  animation: wave 4s ease-in-out infinite;
}

@keyframes wave {
  0%, 100% { transform: translateY(0px); }
  50% { transform: translateY(-10px); }
}