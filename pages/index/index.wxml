<view class="home-container">
  <!-- 顶部装饰区域 -->
  <view class="top-decoration">
    <view class="decoration-circle circle-1"></view>
    <view class="decoration-circle circle-2"></view>
    <view class="decoration-circle circle-3"></view>
  </view>

  <!-- 主要内容区域 -->
  <view class="main-content">
    <!-- 应用图标和标题 -->
    <view class="app-header">
      <view class="app-icon">
        <text class="icon-emoji">🏥</text>
      </view>
      <text class="app-title">智能医疗助手</text>
      
    </view>



    <!-- 输入方式选择 -->
    <view class="input-mode-section">
      <text class="section-title">选择输入方式</text>
      <picker mode="selector" range="{{inputModes}}" bindchange="onModeChange">
        <view class="mode-picker">
          <view class="picker-content">
            <text class="picker-icon">{{inputMode === '语音输入' ? '🎤' : '✏️'}}</text>
            <text class="picker-text">{{inputMode}}</text>
            <text class="picker-arrow">▼</text>
          </view>
        </view>
      </picker>
    </view>

    <!-- 开始按钮 -->
    <button class="start-btn" bindtap="startConsult">
      <text class="start-icon">🚀</text>
      <text class="start-text">开始问诊</text>
    </button>



    <!-- 底部提示 -->
    <view class="bottom-tips">
      <text class="tip-text">请根据医生的问题如实回答</text>
      <text class="tip-text">系统将为您生成个性化健康建议</text>
    </view>
  </view>

  <!-- 底部装饰 -->
  <view class="bottom-decoration">
    <view class="wave-bg"></view>
  </view>
</view>