/* 云开发诊断页面样式 */

.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 30rpx;
  color: #333;
}

.section {
  background-color: white;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
  border-bottom: 2rpx solid #007aff;
  padding-bottom: 5rpx;
}

.info-item {
  display: flex;
  margin-bottom: 10rpx;
}

.label {
  font-size: 24rpx;
  color: #666;
  width: 200rpx;
  flex-shrink: 0;
}

.value {
  font-size: 24rpx;
  color: #333;
  flex: 1;
  word-break: break-all;
}

.result-item {
  margin-bottom: 15rpx;
  padding: 10rpx;
  border-radius: 5rpx;
  background-color: #f9f9f9;
}

.result-name {
  font-size: 24rpx;
  color: #333;
  margin-bottom: 5rpx;
}

.result-status {
  font-size: 22rpx;
  margin-bottom: 5rpx;
}

.result-status.success {
  color: #4caf50;
}

.result-status.error {
  color: #f44336;
}

.result-fix {
  font-size: 20rpx;
  color: #ff9800;
  background-color: #fff3e0;
  padding: 5rpx 10rpx;
  border-radius: 3rpx;
}

.test-buttons {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  margin-bottom: 20rpx;
}

.test-btn {
  flex: 1;
  min-width: 200rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 24rpx;
  background-color: #007aff;
  color: white;
  border: none;
  border-radius: 5rpx;
}

.test-btn:hover {
  background-color: #0056cc;
}

.test-results {
  margin-top: 20rpx;
}

.test-result {
  margin-bottom: 10rpx;
  padding: 10rpx;
  border-radius: 5rpx;
  background-color: #f0f0f0;
}

.test-name {
  font-size: 24rpx;
  font-weight: bold;
  margin-bottom: 5rpx;
}

.test-status {
  font-size: 22rpx;
  margin-bottom: 5rpx;
}

.test-status.success {
  color: #4caf50;
}

.test-status.error {
  color: #f44336;
}

.test-message {
  font-size: 20rpx;
  color: #666;
}

.actions {
  margin-top: 30rpx;
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.action-btn {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  border-radius: 10rpx;
  border: none;
}

.action-btn.primary {
  background-color: #007aff;
  color: white;
}

.action-btn:not(.primary) {
  background-color: white;
  color: #007aff;
  border: 2rpx solid #007aff;
}

/* 弹窗样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  width: 90%;
  max-height: 80%;
  background-color: white;
  border-radius: 10rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 20rpx;
  color: #333;
}

.modal-body {
  flex: 1;
  overflow-y: auto;
}

.guide-item {
  margin-bottom: 20rpx;
  padding: 15rpx;
  border-radius: 5rpx;
  background-color: #f9f9f9;
}

.guide-issue {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.guide-solutions {
  padding-left: 20rpx;
}

.solution {
  font-size: 22rpx;
  color: #666;
  margin-bottom: 5rpx;
  line-height: 1.4;
}

.modal-close {
  height: 70rpx;
  line-height: 70rpx;
  font-size: 26rpx;
  background-color: #007aff;
  color: white;
  border: none;
  border-radius: 5rpx;
  margin-top: 20rpx;
}
