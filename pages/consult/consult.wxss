/* 响应式设计 */
@media (max-width: 320px) {
  .chat-header {
    padding: 12px 15px;
  }
  
  .doctor-name {
    font-size: 16px;
  }
  
  .chat-messages {
    padding: 15px 10px;
  }
  
  .message-bubble {
    max-width: 85%;
  }
  
  .bubble-content {
    padding: 10px 14px;
  }
  
  .chat-input-container {
    padding: 12px 15px 15px;
  }
  
  .input-mode-switch {
    gap: 8px;
  }
  
  .mode-btn {
    padding: 6px 12px;
    min-width: 60px;
  }
}

/* 深色模式支持（可选） */
@media (prefers-color-scheme: dark) {
  .chat-container {
    background-color: #1a1a1a;
  }
  
  .chat-messages {
    background-color: #1a1a1a;
  }
  
  .system-bubble .bubble-content {
    background-color: #2a2a2a;
    border-color: #404040;
    color: #ffffff;
  }
  
  .chat-input-container {
    background-color: #2a2a2a;
    border-color: #404040;
  }
  
  .input-wrapper {
    background-color: #3a3a3a;
    border-color: #505050;
  }
  
  .chat-input {
    color: #ffffff;
  }
}

/* 实时语音识别样式 */
.realtime-result-display {
  background: linear-gradient(135deg, #e3f2fd, #f3e5f5);
  border: 1px solid #90caf9;
  border-radius: 12px;
  margin: 8px 0;
  padding: 12px;
  animation: fadeIn 0.3s ease-in-out;
}

.realtime-text {
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.realtime-label {
  font-size: 12px;
  color: #666;
  font-weight: 500;
}

.realtime-content {
  font-size: 14px;
  color: #333;
  line-height: 1.4;
  min-height: 20px;
}

/* 实时录音状态 */
.status-item.realtime-recording {
  background: linear-gradient(135deg, #ff9800, #f57c00);
  color: #fff;
  animation: pulse 1.5s infinite;
}

.status-item.realtime-recording .status-icon {
  animation: bounce 1s infinite;
}

/* 动画效果 */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(-10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes pulse {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.8;
  }
}

@keyframes bounce {
  0%, 20%, 50%, 80%, 100% {
    transform: translateY(0);
  }
  40% {
    transform: translateY(-3px);
  }
  60% {
    transform: translateY(-1px);
  }
}